@using Webbansach.Models
@model List<GioHang>

@{
    ViewBag.Title = "Sửa giỏ hàng";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

@section Sach
{

    <div @*class="row cart-body"*@ style="margin: auto; width: 60%;">
        <div @*class="col-lg-6 col-md-6 col-sm-6 col-xs-12 col-md-push-6 col-sm-push-6"*@>
            <div class="panel panel-info">
                <div class="panel-heading">
                    <strong>CHỈNH SỬA GIỎ HÀNG</strong>
                </div>
                @foreach (var item in Model)
                {
                    <div class="panel-body">
                        <div class="form-group" style="font-size:larger;">
                            <div class="col-sm-3 col-xs-3">
                                <img class="img-responsive" src="@Url.Content("~/HinhAnh/Sach/" + item.sHinhAnh)">
                            </div>
                            <div class="col-sm-6 col-xs-6">
                                <div class="col-xs-12">@item.sTenSach</div>
                                @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMaSach = item.iMaSach }))
                                {
                                    <div class="col-xs-12"><small>Số lượng: <span>@Html.TextBox("txtSoLuong", @item.iSoLuong)</span></small><input type="submit" value="Cập nhật" style="width: 100px;font-size: 14px;border-radius: 4px;" /></div>
                                }
                                <div class="col-xs-12"><small>Đơn giá: <span>@item.dDonGia</span> VND</small></div>
                                <div class="col-xs-12" style="color:red;"><small>Thành tiền: <span>@item.ThanhTien</span> VND</small></div>
                            </div>
                            <div class="col-sm-3 col-xs-3 text-right">
                                <h6>@Html.ActionLink("Xóa", "XoaGioHang", new { @iMaSach = item.iMaSach })</h6>
                            </div>
                        </div>
                        <div class="form-group"><hr /></div>
                    </div>
                }
            </div>
        </div>
    </div>
}

