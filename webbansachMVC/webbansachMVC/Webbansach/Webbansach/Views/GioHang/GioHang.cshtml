@using Webbansach.Models
@model List<GioHang>

@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

@section Sach
{
    
    <div  style="margin: auto; width: 60%;">
        <div  >
            <div class="panel panel-info">
                <div class="panel-heading">
                    <strong>GIỎ HÀNG</strong>
                    <h6>@Html.ActionLink("Chỉnh sửa", "SuaGioHang")</h6>
                </div>
                @foreach (var item in Model)
                {
                    <div class="panel-body">
                        <div class="form-group" style="font-size:larger;">
                            <div class="col-sm-3 col-xs-3">
                                <a href="@Url.Action("XemChiTiet","Sach", new {@MaSach = item.iMaSach })"><img class="img-responsive" src="@Url.Content("~/HinhAnh/Sach/" + item.sHinhAnh)"></a>
                            </div>
                            <div class="col-sm-6 col-xs-6">
                                <div class="col-xs-12">@item.sTenSach</div>
                                <div class="col-xs-12"><small>Số lượng: <span>@item.iSoLuong</span></small></div>
                                <div class="col-xs-12"><small>Đơn giá: <span>@item.dDonGia</span> VND</small></div>
                                <div class="col-xs-12" style="color:red;"><small>Thành tiền: <span>@item.ThanhTien</span> VND</small></div>
                            </div>
                        </div>
                        <div class="form-group"><hr /></div>
                    </div>
                }
            </div>
            <div >
                @using (Html.BeginForm("DatHang", "GioHang"))
                {
                    <input type="submit" value="Đặt hàng" style="font-size: 17px; font-weight: bold; color: #31708f; background-color: #d9edf7; border-color: #bce8f1;"/>
                }
            </div>
        </div>
    </div>
}