@model IEnumerable<Webbansach.Models.Sach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}
<div id="content">
    <div id="card">
        <div id="card-header">
            <h3 id="card-title">Danh mục sách</h3>
            <a href="@Url.Action("ThemSach", "QuanLiSach")" class="btn btn-primary">Thêm sản phẩm</a>
        </div>
        <div id="card-body">
            <div>
                <table class="table table-bordered">
                    <thead class="text-primary bg-transparent">
                        <tr>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.First().TenSach)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.First().Gia)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.First().MoTa)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.First().AnhBia)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.First().NgayCapNhat)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.First().SoLuongTon)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.First().MaTacGia)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.First().MaNXB)
                            </th>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.First().MaTheLoai)
                            </th>
                            <th class="text-center"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.TenSach)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.Gia)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.MoTa)
                                </td>
                                <td class="text-center">
                                    <img style="width: 95px;"  src="@Url.Content("~/HinhAnh/Sach/"+item.AnhBia)">
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.NgayCapNhat)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.SoLuongTon)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.TacGia.TenTacGia)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.NhaXuatBan.TenNXB)
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.TheLoai.TenTheLoai)
                                </td>
                                <td class="text-center">
                                    @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { @MaSach = item.MaSach }) |
                                    @Html.ActionLink("Hiển thị", "HienThi", new { @MaSach = item.MaSach }) |
                                    @Html.ActionLink("Xóa", "Xoa", new { @MaSach = item.MaSach })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>