@model Webbansach.Models.DonHang

@{
    ViewBag.Title = "CapNhat";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2>Cập nhật đơn hàng @ViewBag.MaDH</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDonHang)
        @Html.HiddenFor(model => model.NgayDat)
        @Html.HiddenFor(model => model.MaKH)

        <div class="form-group">
            @Html.LabelFor(model => model.DaThanhToan, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.DaThanhToan, new List<SelectListItem>
                {
                      new SelectListItem {Text = "Chuyển khoản ngân hàng", Value = "Chuyển khoản ngân hàng"},
                      new SelectListItem {Text = "Ship-cod", Value = "Ship-cod" },
                      new SelectListItem {Text = "MoMo", Value = "MoMo" }
                })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TinhTrangGiaoHang, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TinhTrangGiaoHang, new List<SelectListItem>
                {
                    new SelectListItem {Text = "Chuẩn bị hàng", Value = "Chuẩn bị hàng"},
                    new SelectListItem {Text = "Đang giao", Value = "Đang giao" },
                    new SelectListItem {Text = "Đã giao", Value = "Đã giao"}
                })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgayGiao, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayGiao, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NgayGiao, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "Index")
</div>
